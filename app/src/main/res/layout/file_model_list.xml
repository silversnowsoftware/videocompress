<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:App="http://schemas.android.com/apk/res-auto"
    android:id="@+id/videoCard"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_gravity="center|top"
    App:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/selectRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_background"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivVideoTumbnail"
                android:layout_width="140dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/ivSelectRow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/ivVideoTumbnail"
                android:layout_alignRight="@id/ivVideoTumbnail"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@mipmap/selected"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/play" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@id/ivVideoTumbnail"
                android:layout_alignLeft="@id/ivVideoTumbnail"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@color/black"
                android:gravity="center"
                android:padding="3dp"
                android:text="00:12"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/tvVideoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="Out1.mp4"
                android:textColor="@color/listItemTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCreateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="25dp"
                android:textColor="@color/listItemTextColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvResolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="1024x768"
                android:textColor="@color/listItemTextColor"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ivCompressed"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:scaleType="center"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/ivTrimmed"
                android:src="@mipmap/res1044p"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivTrimmed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/tvProgress"
                android:src="@mipmap/trimmed"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="%78"
                android:textColor="@color/listItemTextColor"
                android:textSize="15sp" />
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>